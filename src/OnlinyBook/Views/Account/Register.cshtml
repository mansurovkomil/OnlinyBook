@using OnlinyBook.Service.Dtos.Accounts;
@model AccountRegisterDto
@{
	Layout = "_AccountLayout.cshtml";
}


<div class="login">
	<h1>Регистрация</h1>
	<form method="post" asp-controller="Account" asp-action="register">

		<div class="form-group">
			<input type="text" asp-for=FirstName class="form-style" placeholder="Введите фамилию">
			<i class="mt-3 input-icon fa fa-user"></i>
			<span asp-validation-for="FirstName" class="text-danger"></span>
		</div>

		<div class="form-group">
			<input type="text" asp-for=LastName class="form-style" placeholder="Введите имя">
			<i class="mt-3 input-icon fa fa-user"></i>
			<span asp-validation-for="LastName" class="text-danger"></span>
		</div>

		<div class="form-group">
			<input type="text" asp-for=PhoneNumber class="form-style" placeholder="Введите телефон номер">
			<i class="mt-3 input-icon fa fa-user"></i>
			<span asp-validation-for="PhoneNumber" class="text-danger"></span>
		</div>

		<div class="form-group mt-2">
			<input type="email" asp-for="Email" class="form-style" placeholder="Введите почту">
			<i class="mt-3 input-icon fa fa-at"></i>
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>

		<div class="form-group mt-2">
			<input type="password" asp-for="Password" class="form-style" placeholder="Введите пароль">
			<i class="mt-3 input-icon fa fa-lock"></i>
			<span asp-validation-for="Password" class="text-danger"></span>
		</div>

		<div>
			<button type="submit" class="btn btn-primary btn-block btn-large">Регистрация</button>

			<a asp-controller="account" asp-action="login" type="submit" class="btn btn-primary btn-block btn-large">Вход</a>
		</div>

	</form>
</div>



