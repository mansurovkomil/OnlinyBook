@using OnlinyBook.Service.Dtos.Users;
@model UserUpdateDto
@{
	Layout = "_AccountLayout.cshtml";
}


<div class="login">
	<h1>Настройка аккаунта</h1>
	<form method="post" asp-controller="account" enctype="multipart/form-data" asp-action="upaccount">

		<div class="form-group">
			<input type="text" asp-for=FirstName class="form-control form-control-solid" placeholder="Введите фамилию"/>
			<span asp-validation-for="FirstName" class="text-danger"></span>
		</div>

		<div class="form-group">
			<input type="text" asp-for=LastName class="form-style" placeholder="Введите имя">
			<i class="mt-3 input-icon fa fa-user"></i>
		</div>

		<div class="form-group">
			<input type="text" asp-for=PhoneNumber class="form-style" placeholder="Введите телефон номер">
			<i class="mt-3 input-icon fa fa-user"></i>
		</div>

		<div>
			<button type="submit" class="btn btn-primary btn-block btn-large">Обновить</button>

			<a asp-controller="home" asp-action="index" class="btn btn-primary btn-block btn-large">Отмена</a>
		</div>

	</form>
</div>



